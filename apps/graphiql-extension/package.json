{
  "name": "@vscodegraphiql/extension",
  "version": "0.0.1",
  "publisher": "airtonix",
  "private": true,
  "engines": {
    "vscode": "^1.66.0"
  },
  "activationEvents": [
    "onCommand:vscodegraphqlexplorer.exploreSchema"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vscodegraphiql.exploreSchema",
        "title": "Explore schema..."
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceLangId == graphql",
          "command": "vscodegraphiql.exploreSchema"
        }
      ]
    }
  },
  "nx": {
    "sourceRoot": "./src",
    "projectType": "application",
    "targets": {
      "build": {
        "executor": "@nxext/vite:build",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "outputPath": "dist/apps/extension",
          "baseHref": "/",
          "configFile": "@nxext/vite/plugins/vite"
        },
        "configurations": {
          "production": {
            "fileReplacements": [
              {
                "replace": "./src/environments/environment.ts",
                "with": "./src/environments/environment.prod.ts"
              }
            ]
          }
        },
        "dependsOn": [
          {
            "projects": "@vscodegraphiql/message-states"
          },
          {
            "projects": "@vscodegraphiql/message-types"
          }
        ]
      },
      "lint": {
        "executor": "@nrwl/linter:eslint",
        "outputs": [
          "{options.outputFile}"
        ],
        "options": {
          "lintFilePatterns": [
            "./**/*.{ts,js,tsx,jsx}"
          ]
        }
      },
      "test": {
        "executor": "@nrwl/jest:jest",
        "outputs": [
          "coverage/apps/extension"
        ],
        "options": {
          "jestConfig": "./jest.config.js",
          "passWithNoTests": true
        }
      }
    },
    "tags": []
  }
}
