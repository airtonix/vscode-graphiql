// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {},
      "group": {
        "kind": "build"
      }
    },
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": ["$tsc-watch", {
        "owner": "typescript",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Watching files for changes",
          "endsPattern": "^Wrote ([\\w\/\\.]+).*$"
        },
        "pattern":{
          "regexp": ".*>.([\\w\/\\.]+)\\:(\\d+)\\:(\\d+)\\: (error|warning)\\:.([\\w\\W]+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      }],
      "isBackground": true,
      "presentation": {
        "group": "watchers"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "watch-tests",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "group": "watchers"
      },
      "group": "build"
    },
    {
      "label": "tasks: watch-tests",
      "dependsOn": ["npm: watch", "npm: watch-tests"],
      "problemMatcher": []
    }
  ]
}
